{{> header }}
            <div class="collapse navbar-collapse" id="main-menu">
              <div class="navbar-nav">
                <li class="nav-item">
                <a class="nav-link" href="/">Index</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/playoff">Playoff</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/scorers">Scorers</a>
                </li>
                <li class="nav-item">
                <a class="nav-link active" href="/standings">Standings</a>
                </li>
              </div>
            </div>
        </div>
    </nav>
      <div class="container-fluid p-5">
        {{#each result}}
        <div class="row g-4 p-4">
          <div class="col-3 mx-auto min-width-30">
            <div class="card bg-light">
              <div class="card-body text-center card-top">
                <h3 class="card-title mb-3">{{ name }}</h3>
              </div>
              <div class="card-body">
                <p class="card-text">
                    <table class="table table-hover table-sm">
                        <thead>
                            <tr>
                                <th scope="col">Team</th>
                                <th scope="col">P</th>
                                <th scope="col">W</th>
                                <th scope="col">D</th>
                                <th scope="col">L</th>
                                <th scope="col">F</th>
                                <th scope="col">A</th>
                                <th scope="col">Pts</th>
                                <th scope="col">Q</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each rows}}
                            <tr>
                                <td>{{ team.name }}</td>
                                <td>{{ matches }} </td>
                                <td>{{ wins }} </td>
                                <td>{{ draws }} </td>
                                <td>{{ losses }} </td>
                                <td>{{ scoresFor }} </td>
                                <td>{{ scoresAgainst }} </td>
                                <td>{{ points }} </td>
                                <td>{{#if (isPlayOffs promotion.text)}}Q{{else}}{{/if}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
{{> footer }}