<div class="col-md-4 col-lg-3 col-xl-2">
    <div class="card bg-light">
        <div class="card-body text-center card-top">
            <h3 class="card-title mb-3">Group {{ group }}</h3>
        </div>
        <div class="card-body">
            <p class="card-text">
                {{#each item.matches}}
                <li>
                    <strong>{{ homeTeam.name }}</strong>
                    vs
                    <strong>{{ awayTeam.name }}</strong>
                    {{score.fullTime.home}} - {{score.fullTime.away}}
                </li>
                {{/each}}
            </p>
        </div>
    </div>
</div>